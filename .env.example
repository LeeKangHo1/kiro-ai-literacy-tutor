# .env.example
# 환경 변수 설정 예시 파일

# Flask 설정
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here

# 데이터베이스 설정
DATABASE_URL=mysql://username:password@localhost:3306/ai_literacy_navigator

# JWT 설정
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# OpenAI API 설정
OPENAI_API_KEY=your-openai-api-key-here
# 사용할 OpenAI 모델 (예: gpt-4o-mini, gpt-4, gpt-3.5-turbo 등)
OPENAI_MODEL=gpt-4o-mini

# LangSmith 설정
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=ai-literacy-navigator

# ChromaDB 설정
CHROMADB_HOST=localhost
CHROMADB_PORT=8000

# 학습 설정
MAX_LOOP_SUMMARY_COUNT=5
DEFAULT_USER_LEVEL=medium

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=app.log